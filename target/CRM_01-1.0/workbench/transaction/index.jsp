			$("#hide-owner").val($.trim($("#condition-search-owner").val()));
			$("#hide-name").val($.trim($("#condition-search-name").val()));
			$("#hide-stage").val($.trim($("#condition-search-stage").val()));
			$("#hide-source").val($.trim($("#condition-search-source").val()));
			$("#hide-type").val($.trim($("#condition-search-type").val()));
			$("#hide-conname").val($.trim($("#condition-search-conname").val()));
			$("#hide-cusname").val($.trim($("#condition-search-cusname").val()));

			pageList(1,3);

		});

		pageList(1,3);
	});

	function pageList(pageNo,pageSize) {

		$.ajax({
			url:"workbench/tran/getTransactionList.do",
			data:{
				"pageNo":pageNo,
				"pageSize":pageSize,
				"owner": $.trim($("#hide-owner").val()),
				"name": $.trim($("#hide-name").val()),
				"stage": $.trim($("#hide-stage").val()),
				"source": $.trim($("#hide-source").val()),
				"type": $.trim($("#hide-type").val()),
				"contactsid": $.trim($("#hide-conname").val()),
				"customerid": $.trim($("#hide-cusname").val())
			},
			dataType:"json",
			type:"get",
			success:function (data) {
				// 获取到交易列表
				var html = "";

				$.each(data.trans,function (index,value) {
					html += '<tr>';
					html += '<td><input type="checkbox" name="one" /></td>';
					html += '<td><a style="text-decoration: none; cursor: pointer;" onclick="window.location.href=\'workbench/transaction/detail.jsp?id='+value.id+'\';">'+value.name+'</a></td>';
					// 这里的customerid 为客户名称 需要多表联查
					html += '<td>'+value.customerid+'</td>';
					html += '<td>'+value.stage+'</td>';
					html += '<td>'+value.type+'</td>';
					// 这里owner和user表联查得到姓名
					html += '<td>'+value.owner+'</td>';
					html += '<td>'+value.source+'</td>';
					// 这里的contactsid是联系人的姓名 不是id
					html += '<td>'+value.contactsid+'</td>';
					html += '</tr>';
				})

				$("#tran-list").html(html);


				// 数据处理完毕后 对前端展现分页相关信息
				// 计算总页数
				var totalPages = data.totalCount % pageSize === 0 ? data.totalCount / pageSize : parseInt(data.totalCount / pageSize) + 1;
				$("#transList").bs_pagination({
					currentPage: pageNo, // 页码
					rowsPerPage: pageSize, // 每页显示的记录条数
					maxRowsPerPage: 20, // 每页最多显示的记录条数
					totalPages: totalPages, // 总页数
					totalRows: data.total, // 总记录条数

					visiblePageLinks: 5, // 显示几个卡片

					showGoToPage: true,
					showRowsPerPage: true,
					showRowsInfo: true,
					showRowsDefaultInfo: true,

					onChangePage : function(event, data){
						pageList(data.currentPage , data.rowsPerPage);
					}
				});

			}
		})



	}
	
